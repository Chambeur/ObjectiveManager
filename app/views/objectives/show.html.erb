<div class="page-header">
	<h1><%= @objective.title %> </h1>
</div>

<p class="lead"> <%= @objective.description %> </p>

<p>
  <% if @objective.status.eql?(Status::PENDING) %>
    <%= link_to "Finish objective", done_objective_path(@objective),
      method: 'put',
      confirm: "Are you sure?",
      class: "btn btn-success"
    %>
  <% end %>

  <% if @objective.status.eql?(Status::PENDING||Status::MISSED) %>
    <%= link_to "Report objective", report_objective_path(@objective),
      method: "put",
      confirm: "Are you sure?",
      class: "btn btn-warning"
    %>
  <% end %>

  <% if @objective.status.eql?(Status::PENDING) %>
    <%= link_to "Delete objective",
      objective_path(@objective),
      method: "delete",
      confirm: "Are you sure?",
      class: "btn btn-danger"
    %>
  <% end %>
</p>
