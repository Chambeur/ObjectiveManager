<div class="page-header">
  <h1>New objective for project : <%= @project.name %></h1>
</div>

<%= form_for @objective, :url => project_objectives_path(@project) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "Title", :class => 'span8' %>

  <% @users = User.all %>
  <%= f.label "Teammate selection" %> 
  <%= select_tag 'user_id', options_from_collection_for_select(@users, 'id', 'email'), :prompt => "Select an user" %>

	<%= f.label "Week" %>
	<input type="date" />

	<%= f.label :description, "Objective description" %> 
	<%= f.text_area :description, :placeholder => "Description", :class => 'span8' %>

	<%= f.submit :class => "btn btn-primary" %>

<% end %>
