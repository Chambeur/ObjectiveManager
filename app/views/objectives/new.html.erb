<div class="page-header">
  <h1>New objective for project : <%= @project.name %></h1>
</div>

<%= form_for @objective, url: project_objectives_path(@project) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title,
      placeholder: "Title",
      class: 'span8'
    %>
  </p>

  <p>
    <%= label_tag :user_id, "Teammate selection" %>
    <%= select_tag :user_id, options_from_collection_for_select(@profiles, 'user_id', 'pseudo'),
      prompt: "Select an user"
    %>
  </p>

  <p>
    <%= label_tag "Label(s) selection" %>
    <ul class="inline">
      <% @labels.each do |label| %>
        <li>
          <%= check_box_tag 'label_ids[]', label.id %>
          <%= label_tag label.id, label.name, class: label.colour %>
        </li>
      <% end %>
    </ul>
  </p>

  <p>
    <%= f.label :description, "Objective description" %>
  	<%= f.text_area :description,
      placeholder: "Description",
      class: 'span8'
    %>
  </p>

  <p>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", project_path(@project), class: "btn" %>
  </p>

<% end %>
