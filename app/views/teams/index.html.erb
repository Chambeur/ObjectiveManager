<div class="page-header">
	<h1>All teams </h1>
</div>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
      <th>Name</th>
      <th>Is Autogenerated?</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
	</thead>

	<tbody>
		<% @teams.each do |team| %>
			<tr>
				<td><%= team.name %></td>
				<td><%= team.autogenerate %></td>
				<td>Edit</td>
				<td>
          <%= link_to "Delete", team_path(team),
            method: :delete,
            confirm: "Are you sure?"
          %>
        </td>
			</tr>
		<% end %>
	</tbody>

</table>
