<div class="page-header">
  <h1><%= @team.name %></h1>
</div>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
      <th>Email</th>
  		<th>Pseudo</th>
  		<th>Name</th>
  		<th>Is Manager?</th>
  		<th>Edit</th>
  		<th>Delete</th>
    </tr>
	</thead>

	<tbody>
		<% @teammembers.each do |teammember| %>
  		<tr>
        <td><%= teammember.user.email %> </td>
  			<td><%= teammember.user.profile.pseudo %></td>
  			<td><%= teammember.user.profile.firstname + teammember.user.profile.lastname %></td>
  			<td><%= teammember.manager? %></td>
  			<td>Edit</td>
  			<td>
  				<%= link_to "Delete", team_teammember_path(@team, teammember),
  					method: :delete,
  					confirm: "Are you sure?"
  				%>
  			</td>
  		</tr>
		<% end %>
	</tbody>

</table>