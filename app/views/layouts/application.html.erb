<!DOCTYPE html>
<html>
  <head>
    <title>ObjManager</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>

    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Objective Manager", root_path, class: "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <li> <%= link_to "Home", root_path %> </li>
              <% if user_signed_in? %>
                <li> <%= link_to "Sign out", destroy_user_session_path, method: :delete %> </li>
                <li> <%= link_to "Edit profile", edit_profile_path(current_user.profile) %>  </li>
              <% else %>
                <li> <%= link_to "Sign up", new_user_registration_path %> </li>
                <li> <%= link_to "Sign in", new_user_session_path %> </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <div class="container">
      <section class="row">

        <% if user_signed_in? %>

          <aside class="span2">
            <h2>Profil</h2>
            <ul class="nav nav-pills nav-stacked">
              <li> <%=link_to "All Projects", projects_path, :class => "btn-large" %> </li>
              <li> <%=link_to "Manage Labels", labels_path, :class => "btn-large" %> </li>
              <li> <%=link_to "Manage Teams", teams_path, :class => "btn-large" %> </li>
            </ul>
          </aside>

          <article class="span8">
            <%= yield %>
          </article>

          <aside class="span2">
            <h3>Quick views</h3>
            <ul>
              <li> Current Week : <%= Date.today.cweek %> </li>
              <li> Current Year : <%= Date.today.cwyear %> </li>
              <li> Avancement : <%= "#{current_user.profile.percent}%" %> </li>
              <li>------------------</li>
              <% current_user.teams.each do |team| %>
                <% team.projects.each do |project| %>
                  <li><%= link_to "#{project.name}", project_path(project) %> :
                    <%= "#{current_user.profile.percent(project_id: project.id)}%" %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </aside>

        <% else %>
          <%= yield %>
        <% end %>
      </section>

      <footer class="row">
      </footer>

    </div>
  </body>
</html>
