<% if current_user.admin? %>
  <div class="page-header">
    <h1>All projects </h1>
  </div>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Team</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to "#{project.name}", project_path(project) %></td>
          <td><%= link_to "#{project.description}", project_path(project) %></td>
          <td><%= link_to "#{project.team.name unless project.team.nil?}", team_path(project.team) %></td>
          <td>Edit</td>
          <td>
            <%= link_to "Delete", project_path(project),
              method: :delete,
              confirm: "Are you sure?"
            %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <%= link_to "Create project", new_project_path,
    class: "btn",
    type: "button"
  %>
<% end %>