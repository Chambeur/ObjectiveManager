<div class="page-header">
  <h1><%= @project.name %></h1>
</div>

<p><%= @project.description %></p>

<%= link_to "Create new objective", new_project_objective_path(@project) ,
  class: "btn",
  type: "button"
%>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
  		<th>Title</th>
  		<th>Description</th>
  		<th>Status</th>
  		<th>Edit</th>
  		<th>Delete</th>
    </tr>
	</thead>

	<tbody>
		<% @objectives.each do |objective| %>
  		<tr>
  			<td>
          <% objective.labels.each do |l| %>
          	<%= label_tag :label, l.name, class: l.colour %>
          <% end %>
          <%= link_to "#{objective.title}", objective_path(objective) %>
        </td>
  			<td><%= link_to "#{objective.description}", objective_path(objective) %></td>
  			<td>
  				<span class="badge badge-<%= objective.status %>">
  					<%= objective.status %>
  				</span>
  			</td>
  			<td>Edit</td>
  			<td>
  				<%= link_to "Delete", project_objective_path(@project, objective),
  					method: :delete,
  					confirm: "Are you sure?"
  				%>
  			</td>
  		</tr>
		<% end %>
	</tbody>

</table>